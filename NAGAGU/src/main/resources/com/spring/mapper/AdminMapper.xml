	<!-- 견적관리 -->
	<resultMap type="com.spring.estimate.EstimateVO" id="estimateMap">
		<result property="ESTIMATE_NUM" column="ESTIMATE_NUM"/>
		<result property="ESTIMATE_MEMBER" column="ESTIMATE_MEMBER"/> 
