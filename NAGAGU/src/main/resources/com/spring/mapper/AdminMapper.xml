		<result property="ESTIMATE_TITLE" column="ESTIMATE_TITLE"/> 
		<result property="ESTIMATE_DATE" column="ESTIMATE_DATE"/> 
		<result property="ESTIMATE_CATEGORY" column="ESTIMATE_CATEGORY"/> 
