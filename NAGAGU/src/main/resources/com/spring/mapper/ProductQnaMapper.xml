		WHERE ((SELECT QNA_STATUS FROM PRODUCT_QNA WHERE QNA_NUM=#{QNA_NUM}) = -1 )
		AND QNA_NUM = (SELECT QNA_RE FROM PRODUCT_QNA WHERE QNA_NUM=#{QNA_NUM} )

 -->	
	
